@model IEnumerable<EmployeeViewModel>

@{
    var isAdmin = User.IsInRole("Admins");

}
@if (isAdmin)
{
    <a asp-action="Edit" class="btn btn-success">Add</a>
}

<table class="table">
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.FirstName</td>
            <td>@item.SurName</td>
            <td>@item.Patronymic</td>
            <td>
                @*@Html.ActionLink("Details", "EmployeeDetails", new { id = item.Id })*@
                <a asp-action="EmployeeDetails" asp-route-id="@item.Id" class="btn btn-success btn-sm text-white">Details</a>
            </td>
            <td>
                @if (isAdmin)
                {
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id })
                    @*<a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success">Edit</a>*@
                    @*<a asp-action="Edit" asp-route-id="@item.Id"><i class="fa fa-edit"></i></a>*@
                }
            </td>
            <td>
                @if (isAdmin)
                {
                    @*@Html.ActionLink("Delete", "Delete", new { id = item.Id })*@
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                    @*<a asp-action="Delete" asp-route-id="@item.Id"><i class="fa fa-bullseye"></i></a>*@
                }
            </td>
        </tr>
    }
</table>